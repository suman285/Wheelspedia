<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".glc">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/alto800_slider"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:iss_auto_cycle="true"
                        app:iss_corner_radius="10"
                        app:iss_delay="1000"
                        app:iss_period="1000"
                        app:iss_title_background="@drawable/default_gradient" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mercedes-Benz GLC\n\nRs.61.99 - 67.99 Lakh*"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="15dp">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Key Specs of Mercedes-Benz GLC"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="30dp">

            </TextView>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="240dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:layout_width="100dp"
                            android:layout_height="240dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:id="@+id/engine">

                            </ImageView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Engine"
                                android:textAlignment="center"
                                android:textStyle="italic"
                                android:textSize="20dp">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:text="1950 cc - 1991 cc"
                                android:textAlignment="center"
                                android:textSize="20dp">

                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:layout_width="100dp"
                            android:layout_height="240dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:id="@+id/bhp">

                            </ImageView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="BHP"
                                android:textAlignment="center"
                                android:textStyle="italic"
                                android:textSize="20dp">

                            </TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:text="192 - 194 Bhp"
                                android:textAlignment="center"
                                android:textSize="20dp">

                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:layout_width="150dp"
                            android:layout_height="240dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:id="@+id/Transmission">

                            </ImageView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:text="Transmission"
                                android:textAlignment="center"
                                android:textStyle="italic"
                                android:textSize="20dp">

                            </TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:text="Automatic"
                                android:textAlignment="center"
                                android:textSize="20dp">

                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:layout_width="100dp"
                            android:layout_height="240dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:id="@+id/Mileage">

                            </ImageView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Drive Type"
                                android:textAlignment="center"
                                android:textStyle="italic"
                                android:textSize="20dp">

                            </TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:text="RWD/AWD"
                                android:textAlignment="center"
                                android:textSize="20dp">

                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:layout_width="100dp"
                            android:layout_height="240dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:id="@+id/Fuel">

                            </ImageView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Fuel"
                                android:textAlignment="center"
                                android:textStyle="italic"
                                android:textSize="20dp">

                            </TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:text="Petrol/Diesel"
                                android:textAlignment="center"
                                android:textSize="20dp">

                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:layout_width="100dp"
                            android:layout_height="240dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:id="@+id/bootspace">

                            </ImageView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Boot Space"
                                android:textAlignment="center"
                                android:textStyle="italic"
                                android:textSize="20dp">

                            </TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:text="500 L (Liters)"
                                android:textAlignment="center"
                                android:textSize="20dp">

                            </TextView>
                        </LinearLayout>
                    </LinearLayout>

                </HorizontalScrollView>
            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specification of Mercedes-Benz GLC"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp">

            </TextView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="450dp">

                <TableLayout
                    android:id="@+id/table_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Table Header -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EEEEEE">

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Specification"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Value"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:padding="8dp" />
                    </TableRow>

                    <!-- Table Rows -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ARAI Mileage"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="17 kmpl"
                            android:textSize="16sp"
                            android:padding="8dp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Engine Displacement (cc)"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1991"
                            android:textSize="16sp"
                            android:padding="8dp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Max Power (bhp@rpm)"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="192bhp@4200rpm"
                            android:textSize="16sp"
                            android:padding="8dp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Seating Capacity"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5"
                            android:textSize="16sp"
                            android:padding="8dp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fuel Tank Capacity"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="66.0"
                            android:textSize="16sp"
                            android:padding="8dp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No. of cylinder"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="4"
                            android:textSize="16sp"
                            android:padding="8dp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Max Torque (nm@rpm)"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="400Nm@1800-2200rpm"
                            android:textSize="16sp"
                            android:padding="8dp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TransmissionType"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Automatic"
                            android:textSize="16sp"
                            android:padding="8dp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Body Type"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="SUV"
                            android:textSize="16sp"
                            android:padding="8dp" />
                    </TableRow>

                    <!-- Repeat the above TableRow for remaining rows -->

                </TableLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Variant of Mercedes-Benz GLC"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp">

            </TextView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/varient_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Table Header -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EEEEEE">

                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Variant"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Transmission"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fuel"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Engine (cc)"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:padding="8dp" />



                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ex-Showroom Price"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:padding="8dp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!--varient name-->
                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="GLC 200 Progressive"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <!--transmission type-->
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Automatic"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <!--fuel type-->
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Petrol"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <!--engine cc-->
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1991 cc"
                            android:textSize="16sp"
                            android:padding="8dp" />


                        <!--ex-showroom price-->
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Rs.61.99 Lakh*"
                            android:textSize="16sp"
                            android:padding="8dp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!--varient name-->
                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="GLC 220d 4MATIC Progressive"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <!--transmission type-->
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Automatic"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <!--fuel type-->
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Diesel"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <!--engine cc-->
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1950 cc"
                            android:textSize="16sp"
                            android:padding="8dp" />


                        <!--ex-showroom price-->
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Rs.67.99 Lakh*"
                            android:textSize="16sp"
                            android:padding="8dp" />
                    </TableRow>









                    <!-- Table Rows -->


                    <!-- Repeat the above TableRow for remaining rows -->

                </TableLayout>
            </HorizontalScrollView>






        </LinearLayout>




    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>